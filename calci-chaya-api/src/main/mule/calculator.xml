            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
 "subtraction": vars.number1-vars.number2
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
    <flow name="delete:\multiplication:calculator-config">
