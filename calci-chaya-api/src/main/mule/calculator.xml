		<set-variable value="#[attributes.queryParams.number2]" doc:name="Set Variable" doc:id="ac407647-6611-4039-8979-13e22eb7ca57" variableName="number2"/>
		<ee:transform>
            <ee:message>
                <ee:set-payload><![CDATA[%dw 2.0
output application/json
---
{
  "Addition": vars.number1+vars.number2
}]]></ee:set-payload>
            </ee:message>
        </ee:transform>
    </flow>
</mule>
